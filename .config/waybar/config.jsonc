  },
  "backlight": {
    "format": "<span color='#f1fa8c'>{icon}</span> {percent}%",
    "format-icons": [
      "ó°ƒ",
      "ó°ƒ "
    ],
    "tooltip-format": "Brightness: {percent}%"
  },
  "network": {
    "format": "<span color='#ff79c6'>ï‡«</span> {essid}",
    "format-alt": "<span color='#ff79c6'>ï‡«</span> {signalStrength}%",
    "format-ethernet": "<span color='#ff79c6'>ó°ˆ€</span> Eth",
