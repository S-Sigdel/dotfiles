  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "<span color='#50fa7b'>{icon}</span> {capacity}%",
    "format-charging": "<span color='#f1fa8c'>ïƒ§</span> {capacity}%",
    "format-plugged": "<span color='#f1fa8c'>ï‡¦</span> {capacity}%",
    "format-icons": [
      "ï‰„",
      "ï‰ƒ",
      "ï‰‚",
      "ï‰",
      "ï‰€"
    ],
    "tooltip-format": "{time} remaining"
  },
  "clock": {
    "format": "{:%H:%M | %a %d}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>"
  },
  "custom/timer": {
    "exec": "/home/thinking/.local/bin/waybar_timer hook",
    "exec-on-event": false,
    "return-type": "json",
    // This format uses the icon and the text returned by your script
    "format": "<span color='#ff5555'>{icon}</span> {0}",
    "format-icons": {
      "standby": "ó±«Œ",
      "running": "ó±«",
      "paused": "ó°¥"
    },
    "tooltip": true,
    "tooltip-format": "{icon} {0}\n\nLeft click: Start 25min session\nMiddle click: Cancel timer\nRight click: Pause/Resume\nScroll: Adjust time",
    "on-click": "/home/thinking/.local/bin/waybar_timer new 25 'notify-send \"Session finished\"'",
    "on-click-middle": "/home/thinking/.local/bin/waybar_timer cancel",
    "on-click-right": "/home/thinking/.local/bin/waybar_timer togglepause",
    "on-scroll-up": "/home/thinking/.local/bin/waybar_timer increase 60 || /home/thinking/.local/bin/waybar_timer new 1 'notify-send -u critical \"Timer expired\"'",
    "on-scroll-down": "/home/thinking/.local/bin/waybar_timer decrease 60"
  },
  "custom/nordvpn": {
    "exec": "/home/thinking/.local/bin/waybar_nordvpn",
    "exec-on-event": false,
    "return-type": "json",
    "interval": 5,
    "format": "{icon} {0}",
    "format-icons": {
