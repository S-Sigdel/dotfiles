{
  "layer": "top",
  "position": "top",
  "height": 32,
  "spacing": 4,
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "custom/nordvpn",
    "custom/timer",
    "pulseaudio",
    "pulseaudio#microphone",
    "backlight",
    "network",
    "cpu",
    "memory",
    "temperature",
    "battery"
  ],
  "hyprland/workspaces": {
    "format": "{name}",
    "on-click": "activate"
  },
  "cpu": {
    "format": "<span color='#50fa7b'>ï‹›</span> {usage}%",
    "interval": 10
  },
  "memory": {
    "format": "<span color='#8be9fd'>ïƒ‰</span> {used:0.1f}G"
  },
  "temperature": {
    "format": "<span color='#ffb86c'>ï‹‰</span> {temperatureC}Â°C"
  },
  "pulseaudio": {
    "format": "<span color='#bd93f9'>{icon}</span> {volume}%",
    "format-muted": "<span color='#6272a4'>ï‘¦</span> Muted",
    "format-bluetooth": "<span color='#8be9fd'>ïŠ”</span> {volume}%",
    "format-muted-bluetooth": "<span color='#6272a4'>ïŠ” ï‘¦</span> Muted",
